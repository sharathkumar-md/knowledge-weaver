# Knowledge Weaver Environment Configuration
# Copy this file to .env and fill in your values
#
# NOTE: Most features work without this file (local-first design)
# Only fill in values if you need specific features:
# - HUGGINGFACE_TOKEN
# - NEO4J_*: Only if using Neo4j backend (default is NetworkX)
# - OPENAI_API_KEY: Only for comparison experiments (optional)

# Hugging Face (optional - only needed for private model downloads)
HUGGINGFACE_TOKEN=your_hf_token_here

# Neo4j Configuration (optional - only if using Neo4j backend)
# Default backend is NetworkX which requires no setup
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# OpenAI API (optional - only for comparison experiments)
OPENAI_API_KEY=your_openai_key_here

# Model Paths
# The actual model used is distilgpt2 (specified in config.yaml)
BASE_MODEL_PATH=distilgpt2
LORA_MODEL_PATH=./models/lora/extractor_v1

# Data paths
RAW_DATA_PATH=./data/raw
PROCESSED_DATA_PATH=./data/processed
DATASET_PATH=./data/datasets

# Vector DB
CHROMA_PERSIST_DIR=./data/chroma_db

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/knowledge_weaver.log

# UI
UI_HOST=localhost
UI_PORT=8501

# Privacy
LOCAL_PROCESSING=true
DATA_ENCRYPTION=false
